# Ambiente (development/production)
NODE_ENV=production

# URLs do Backend
REACT_APP_BACKEND_URL=https://api.timeboard.site
REACT_APP_SOCKET_URL=https://api.timeboard.site

# Configurações do Socket.IO
REACT_APP_SOCKET_PATH=/socket.io/
REACT_APP_SOCKET_RECONNECTION_ATTEMPTS=5
REACT_APP_SOCKET_TIMEOUT=10000

# URLs permitidas em desenvolvimento
REACT_APP_DEV_ORIGINS=["http://localhost:3000","http://localhost:3002","http://192.168.0.127:3002"]

# URLs permitidas em produção
REACT_APP_PROD_ORIGINS=["https://app.timeboard.site","https://timeboard.site","https://api.timeboard.site"]

# Configurações avançadas do Socket.IO
REACT_APP_SOCKET_PING_TIMEOUT=10000
REACT_APP_SOCKET_PING_INTERVAL=5000
REACT_APP_SOCKET_UPGRADE_TIMEOUT=5000 